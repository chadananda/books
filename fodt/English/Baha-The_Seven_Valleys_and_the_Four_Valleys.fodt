     <text:p text:style-name="P11"><text:span text:style-name="T5">The Seven Valleys and the Four Valleys<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280216" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">1</text:span></text:a></text:p>
     <text:p text:style-name="P17"><text:span text:style-name="T5">The Seven Valleys of Bahá’u’lláh<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280217" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
     <text:p text:style-name="P18"><text:span text:style-name="T5">The Valley of Search<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280218" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
     <text:p text:style-name="P18"><text:span text:style-name="T5">The Valley of Love<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280219" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
     <text:p text:style-name="P18"><text:span text:style-name="T5">The Valley of Knowledge<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280220" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
     <text:p text:style-name="P18"><text:span text:style-name="T5">The Valley of Unity<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280221" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
     <text:p text:style-name="P18"><text:span text:style-name="T5">The Valley of Contentment<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280222" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
     <text:p text:style-name="P18"><text:span text:style-name="T5">The Valley of Wonderment<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280223" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
     <text:p text:style-name="P18"><text:span text:style-name="T5">The Valley of True Poverty and Absolute Nothingness<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280224" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
     <text:p text:style-name="P17"><text:span text:style-name="T5">The Four Valleys<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280225" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
     <text:p text:style-name="P18"><text:span text:style-name="T5">The Four Valleys<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280226" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
     <text:p text:style-name="P18"><text:span text:style-name="T5">The First Valley<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280227" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
     <text:p text:style-name="P18"><text:span text:style-name="T5">The Second Valley<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280228" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
     <text:p text:style-name="P18"><text:span text:style-name="T5">The Third Valley<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280229" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
     <text:p text:style-name="P18"><text:span text:style-name="T5">The Fourth Valley<text:tab/></text:span><text:a xlink:type="simple" xlink:href="#__RefHeading___Toc73280230" text:style-name="Index_20_Link_20__28_user_29_" text:visited-style-name="Index_20_Link_20__28_user_29_"><text:span text:style-name="T5">2</text:span></text:a></text:p>
