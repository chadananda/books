    <text:p text:style-name="P10"><text:span text:style-name="T39">„Acest Veac, e Veacul Soarelui Adev</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39">rului. Acest Veac, e Veacul </text:span><text:span text:style-name="T19">î</text:span><text:span text:style-name="T39">ntemeierii </text:span><text:span text:style-name="T19">Î</text:span><text:span text:style-name="T39">mp</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39">r</text:span><text:span text:style-name="T19">ãþ</text:span><text:span text:style-name="T39">iei lui Dumnezeu pe p</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39">m</text:span><text:span text:style-name="T19">â</text:span><text:span text:style-name="T39">nt.” - Steaua Apusului, vol.IX, p.7.</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T19">Î</text:span><text:span text:style-name="T39">n ultimele dou</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39"> versete a C</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39">r</text:span><text:span text:style-name="T19">þ</text:span><text:span text:style-name="T39">ii lui Daniel, se afl</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39"> cuvintele ne</text:span><text:span text:style-name="T19">î</text:span><text:span text:style-name="T39">n</text:span><text:span text:style-name="T19">þ</text:span><text:span text:style-name="T39">elese:</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T39">„Binecuv</text:span><text:span text:style-name="T19">â</text:span><text:span text:style-name="T39">ntat cel ce a</text:span><text:span text:style-name="T19">º</text:span><text:span text:style-name="T39">teapt</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39"> </text:span><text:span text:style-name="T19">º</text:span><text:span text:style-name="T39">i care vine la ziua o mie trei sute, treizeci </text:span><text:span text:style-name="T19">º</text:span><text:span text:style-name="T39">i cinci. Dar mergi </text:span><text:span text:style-name="T19">î</text:span><text:span text:style-name="T39">n calea ta, p</text:span><text:span text:style-name="T19">â</text:span><text:span text:style-name="T39">n</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39"> vine sf</text:span><text:span text:style-name="T19">â</text:span><text:span text:style-name="T39">r</text:span><text:span text:style-name="T19">º</text:span><text:span text:style-name="T39">itul: c</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39">ci te vei odihni </text:span><text:span text:style-name="T19">º</text:span><text:span text:style-name="T39">i vei sta </text:span><text:span text:style-name="T19">î</text:span><text:span text:style-name="T39">n ogorul t</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39">u, la sf</text:span><text:span text:style-name="T19">â</text:span><text:span text:style-name="T39">r</text:span><text:span text:style-name="T19">º</text:span><text:span text:style-name="T39">itul zilelor”.</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T39">„Multe au fost </text:span><text:span text:style-name="T19">î</text:span><text:span text:style-name="T39">ncerc</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39">rile </text:span><text:span text:style-name="T19">î</text:span><text:span text:style-name="T39">nv</text:span><text:span text:style-name="T19">ãþ</text:span><text:span text:style-name="T39">a</text:span><text:span text:style-name="T19">þ</text:span><text:span text:style-name="T39">ilor cercet</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39">tori, pentru a dezlega problema </text:span><text:span text:style-name="T19">î</text:span><text:span text:style-name="T39">n</text:span><text:span text:style-name="T19">þ</text:span><text:span text:style-name="T39">elesului acestor cuvinte. </text:span><text:span text:style-name="T19">Î</text:span><text:span text:style-name="T39">ntr-o convorbire la mas</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39">, la care era de fa</text:span><text:span text:style-name="T19">þã</text:span><text:span text:style-name="T39"> </text:span><text:span text:style-name="T19">º</text:span><text:span text:style-name="T39">i cel ce scrie aceste r</text:span><text:span text:style-name="T19">â</text:span><text:span text:style-name="T39">nduri, ‘Abdu’l-Bah</text:span><text:span text:style-name="T19">á</text:span><text:span text:style-name="T39"> a spus:</text:span></text:p>
