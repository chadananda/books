    <text:p text:style-name="P10"><text:span text:style-name="T22">Tulbur</text:span><text:span text:style-name="T9">ã</text:span><text:span text:style-name="T22">rile sociale dup</text:span><text:span text:style-name="T9">ã</text:span><text:span text:style-name="T22"> r</text:span><text:span text:style-name="T9">ã</text:span><text:span text:style-name="T22">zboi.</text:span></text:p>
