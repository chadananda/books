    <text:p text:style-name="P10"><text:span text:style-name="T6">Urm</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">toarea dare de seam</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> asupra Adun</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">rilor Spirituale din ora</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">ele Persiei, a fost dat</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> celui ce scrie aceste r</text:span><text:span text:style-name="T5">â</text:span><text:span text:style-name="T6">nduri de c</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">tre Jin</text:span><text:span text:style-name="T5">í</text:span><text:span text:style-name="T6">b-i-Asadu’ll</text:span><text:span text:style-name="T5">á</text:span><text:span text:style-name="T6">h F</text:span><text:span text:style-name="T5">á</text:span><text:span text:style-name="T6">dil (M</text:span><text:span text:style-name="T5">á</text:span><text:span text:style-name="T6">zindar</text:span><text:span text:style-name="T5">á</text:span><text:span text:style-name="T6">ni) </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i arat</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> foarte limpede, metodele Bah</text:span><text:span text:style-name="T5">á</text:span><text:span text:style-name="T6">’</text:span><text:span text:style-name="T5">í</text:span><text:span text:style-name="T6"> de organiza</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ie:</text:span></text:p>
