    <text:p text:style-name="P10"><text:span text:style-name="T39">Fiind </text:span><text:span text:style-name="T19">î</text:span><text:span text:style-name="T39">ntrebat </text:span><text:span text:style-name="T19">î</text:span><text:span text:style-name="T39">n februarie 1914, dac</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39"> vreuna din Marile Puteri va dob</text:span><text:span text:style-name="T19">â</text:span><text:span text:style-name="T39">ndi credin</text:span><text:span text:style-name="T19">þ</text:span><text:span text:style-name="T39">a Bah</text:span><text:span text:style-name="T19">á</text:span><text:span text:style-name="T39">’</text:span><text:span text:style-name="T19">í</text:span><text:span text:style-name="T39">, el r</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39">spunse:</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T39">„Toate popoarele din lume vor dob</text:span><text:span text:style-name="T19">â</text:span><text:span text:style-name="T39">ndi credin</text:span><text:span text:style-name="T19">þ</text:span><text:span text:style-name="T39">a Bah</text:span><text:span text:style-name="T19">á</text:span><text:span text:style-name="T39">’</text:span><text:span text:style-name="T19">í</text:span><text:span text:style-name="T39">. Dac</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39"> ai privi </text:span><text:span text:style-name="T19">î</text:span><text:span text:style-name="T39">nceputurile </text:span><text:soft-page-break/><text:span text:style-name="T39">Cauzei pe l</text:span><text:span text:style-name="T19">â</text:span><text:span text:style-name="T39">ng</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39"> starea ei de azi, ai vedea c</text:span><text:span text:style-name="T19">â</text:span><text:span text:style-name="T39">t de repede s-a </text:span><text:span text:style-name="T19">î</text:span><text:span text:style-name="T39">ntins </text:span><text:span text:style-name="T19">î</text:span><text:span text:style-name="T39">nr</text:span><text:span text:style-name="T19">â</text:span><text:span text:style-name="T39">urirea Cuv</text:span><text:span text:style-name="T19">â</text:span><text:span text:style-name="T39">ntului lui Dumnezeu </text:span><text:span text:style-name="T19">º</text:span><text:span text:style-name="T39">i acum a </text:span><text:span text:style-name="T19">î</text:span><text:span text:style-name="T39">nconjurat p</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39">m</text:span><text:span text:style-name="T19">â</text:span><text:span text:style-name="T39">ntul Cauza lui Dumnezeu... Net</text:span><text:span text:style-name="T19">ã</text:span><text:span text:style-name="T39">g</t