    <text:p text:style-name="P10"><text:soft-page-break/><text:span text:style-name="T6">1. A lua m</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">suri pentru r</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">sp</text:span><text:span text:style-name="T5">â</text:span><text:span text:style-name="T6">ndirea </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">nv</text:span><text:span text:style-name="T5">ãþã</text:span><text:span text:style-name="T6">mintelor </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n popor prin adun</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">ri, literaturi, etc.</text:span></text:p>
