    <text:p text:style-name="P10"><text:span text:style-name="T6">De asemenea ‘Abdu’l-Bah</text:span><text:span text:style-name="T5">á</text:span><text:span text:style-name="T6"> mai scrie:</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T6">„Tainele de care omul e nep</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">s</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">tor </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n via</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">a p</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">m</text:span><text:span text:style-name="T5">â</text:span><text:span text:style-name="T6">nteasc</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">, pe acelea le va descoperi </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n via</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">a cereasc</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i acolo va afla toate adev</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">rurile ascunse; cu at</text:span><text:span text:style-name="T5">â</text:span><text:span text:style-name="T6">t mai u</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">or va recunoa</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">te </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i va descoperi persoanele cu care a fost </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n leg</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">tur</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">. F</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">r</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">ndoial</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">, sufletele sfinte, care g</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">sesc un ochi curat </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i sunt d</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">ruite cu darul p</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">trunderii, vor cunoa</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">te </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">mp</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">r</text:span><text:span text:style-name="T5">ãþ</text:span><text:span text:style-name="T6">ia luminii toate tainele </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i vor c</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">uta fericire de a fi de fa</text:span><text:span text:style-name="T5">þã</text:span><text:span text:style-name="T6"> la dezv</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">luirea tuturor sufletelor mari. Vor putea privi ne</text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">ncetat </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n acea lume, </text:span><text:soft-page-break/><text:span text:style-name="T6">Frumuse</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ea lui Dumnezeu. De asemenea vor g</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">si </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n adunarea cereasc</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">, pe to</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i prietenii lui Dumnezeu, pe cei mai de demult </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i pe cei mai noi.</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T6">Deosebirile dintre oameni se vor </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">nvedera </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n mod firesc dup</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> ie</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">irea lor din aceast</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> lume pieritoare. Dar aceste deosebiri nu privesc locul ci sufletul </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i con</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">tiin</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">a. C</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">ci </text:span><text:span text:style-name="T5">Î</text:span><text:span text:style-name="T6">mp</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">r</text:span><text:span text:style-name="T5">ãþ</text:span><text:span text:style-name="T6">ia lui Dumnezeu, e purificat</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> (sau liberat</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">) de loc </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i de spa</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ii; e o alt</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> lume </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i un alt univers. </text:span><text:span text:style-name="T5">ª</text:span><text:span text:style-name="T6">i afla</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i ca un lucru sigur, c</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n lumil divine, sufletele celor iubi</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i se vor recunoa</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">te unele pe altele, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i vor c</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">uta s</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> se </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">mpreune, </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">ntr-o </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">mpreunare spiritual</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">. De asemenea, o iubire pe care a sim</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">it-o cineva, nu va fi uitat</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n lumea </text:span><text:span text:style-name="T5">Î</text:span><text:span text:style-name="T6">mp</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">r</text:span><text:span text:style-name="T5">ãþ</text:span><text:span text:style-name="T6">iei, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i nic nu vei uita acolo via</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">a pe care ai dus-o </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n lumea material</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">”. - Scrisorile lui ‘Abdu’l-Bah</text:span><text:span text:style-name="T5">á</text:span><text:span text:style-name="T6">, vol.I, p.204.</text:span></text:p>
    <text:p text:style-name="P12"/>
    <text:p text:style-name="P10"><text:span text:style-name="T10">Cerul </text:span><text:span text:style-name="T9">º</text:span><text:span text:style-name="T10">i Iadul.</text:span></text:p>
    <text:p text:style-name="P12"/>
    <text:p text:style-name="P10"><text:span text:style-name="T6">Bah</text:span><text:span text:style-name="T5">á</text:span><text:span text:style-name="T6">’u’ll</text:span><text:span text:style-name="T5">á</text:span><text:span text:style-name="T6">h </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i ‘Abdu’l-Bah</text:span><text:span text:style-name="T5">á</text:span><text:span text:style-name="T6">, socotesc drept simbolice, descrierile Cerului </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i a Iadului, care se afl</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n c</text:span><text:span text:style-name="T5">â</text:span><text:span text:style-name="T6">teva din vechile religii dinaintea lor, precum </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i povestirea Biblic</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> a Crea</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">iei, iar nu ca lucruri de un adev</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">r literal. Dup</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">nv</text:span><text:span text:style-name="T5">ãþã</text:span><text:span text:style-name="T6">tura lor, Cerul este o stare de des</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">v</text:span><text:span text:style-name="T5">â</text:span><text:span text:style-name="T6">r</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">ire, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i Iadul e o stare de imperfec</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ie; Cerul e starea de armonie cu voin</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">a lui Dumnezeu, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i cu semenii no</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">tri, iar Iadul, e lipsa acestei armonii; Cerul este o stare de via</text:span><text:span text:style-name="T5">þã</text:span><text:span text:style-name="T6"> spiritual</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">, iar Iadul e o stare de moarte spiritual</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">. Un om poate tr</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">i fie </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n Rai, fie </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n Iad, c</text:span><text:span text:style-name="T5">â</text:span><text:span text:style-name="T6">nd e </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">nc</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> pe p</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">m</text:span><text:span text:style-name="T5">â</text:span><text:span text:style-name="T6">nt. Bucuriile Cerului sunt bucurii spirituale, iar durerile Iadulu, se datoresc lipsei acelor bucurii. Iat</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> ce spune ‘Abdu’l-Bah</text:span><text:span text:style-name="T5">á</text:span><text:span text:style-name="T6">:</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T6">„Când un om e mântuit de către lumina credin</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ei, de întunericul viciilor, I ajunge să fie luminat de strălucirea soarelui Adevărului, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i înnobilat de toate virtu</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ile, el socote</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">te aceasta ca cea mai adevărată răsplată </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">tie că acesta e adevăratul Rai. De asemenea </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">tie că pedeapsa spirituală constă în a fi stăpânit de lumea firească, în a fi ascuns printr-un văl de privirea lui Dumnezeu, în a fi fioros </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i neluminat, în a cădea în pofte trupe</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">ti, în a fi mânat de slăbiciuni animale, în a purta semnul unor însu</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">iri întunecate… acestea sunt cele mai mari pedepse </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i chinuri.</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T6">Răsplătirile vir</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ii de apoi, sunt perfec</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">iunea </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i pacea, dobândite în lumile spirituale, după ce-o părăsim pe aceasta… darurile spirituale, feluritele dobândiri spirituale din Împără</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ia lui Dumnezeu, împlinirea dorin</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">elor sufletului </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i a inimii </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i întâlnirea cu Dumnezeu, în lumea ve</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">niciei. De asemenea, pedepsele vie</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ii de apoi, constau în lipsa binecuvântărilor divine speciale, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i a nemărginitei milostiviri, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i în coborârea la trepta cea mai de jos a existen</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ei. Cel ce e lipsit de aceste daruri </text:span><text:soft-page-break/><text:span text:style-name="T6">dumnezeie</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">ti cu toate că nu încetează de a fiin</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">a după moarte, e privit ca mort de către poporul adevărului.</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T6">Bogă</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ia lumii de apoi, e apropierea lui Dumnezeu. A</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">adar, e sigur, că cei ce sunt aproape de Loca</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">ul Divin, au voie să se roage pentru ceilal</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i această rugăciune e bine primită de Dumnezeu. E chiar cu putin</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ă, că soarta celor care au murit în păcat </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i necredin</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ă, poate fi schimbată; adică pot căpăta iertare, prin milostivirea lui Dumnezeu, nu prin Dreptatea Lui; căci milostivirea dăruie</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">te fără merit, iar dreptatea dă fiecăruia ceea ce merită. După cum avem puterea să ne rugăm aici pe pământ, pentru acele suflete, vom avea aceea</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i putere în lumea cealaltă, care este Împără</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ia lui Dumnezeu. A</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">adar, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i-n lumea cealaltă se poate progresa. Precum aici, sufletul poate primi lumină prin propriile sale rugi, tot a</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">a pot I acolo să se roage de iertare </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i să primească lumină prin rugăciuni </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i evlavie.</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T5">ª</text:span><text:span text:style-name="T6">i înainte, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i după ce ne-am eliberat de forma materială, se poate progresa în desăvâr</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">ire, însă nu în valoare. Nu există o fiin</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ă mai înaltă, decât un om perfect. Omul când a ajuns la acea stare mai înaltă decât a unui om perfect, la care să se poată urca. El poate progresa mereu în perfec</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">iune umană, căci perec</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">iunile umane sunt nemărginite. Astfel, oricât de învă</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">at ar fi un om, ne putem închipui altul </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i mai învă</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">at. A</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">adar, fiind nemărginite perfec</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">iunile omene</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">ti, omul poate progresa în perfec</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">iune </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i după ce a părăsit această lume”. <text:s/>- Răspunsuri la câteva întrebări, p.259-274.</text:span></text:p>
    <text:p text:style-name="P12"/>
    <text:p text:style-name="P16">Unitatea celor două lumi.</text:p>
    <text:p text:style-name="P12"/>
    <text:p text:style-name="P10"><text:span text:style-name="T6">Unitatea omenirii, a</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">a cum o propovăduie</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">te Bahá’u’lláh, nu se referă numai la fiin</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ele trupe</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">ti, ci </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i la toate fiin</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ele umane, fie întrupate, fie dezlegate de trup. Nu numai oamenii ce trăiesc azi pe pământ, dar </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i to</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i acei din lumea spirituală, sunt păr</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ile unui singur </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i aceluia</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i organism, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i aceste două păr</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">isunt strâns legate una de alta. Comunicarea spirituală între una </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i alta, departe de a fi cu neputin</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ă sau nefirească, e neîncetată </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i de neînlăturat. Acei, care au facultă</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i spirituale nedezvoltate, nu-</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i dau seama de această înlăn</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">uire vitală, dar cu cât se dezvoltă acele facultă</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i, comunicarea cu cei de dincolo de văl, se face din ce în ce mai sim</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ită </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i mai vădită. Pentru profe</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i sfin</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i, această îmbinare spirituală e tot atât de apropiată </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i de vie, cum sunt văzul </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i graiul pentru ceilal</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i oameni. Iată ce spune ‘Abdu’l-Bahá:</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T6">„Vedeniile profe</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ilor nu sunt visuri; nu, sunt descoperiri spirituale </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i sunt văzute aievea de ei. Bunăoară, ei spun: „Am văzut o persoană în cutare formă, I-am spus cutare lucru, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i mi-a răspuns în cutare fel”. Viziunea are loc în lumea nesomnului, iar nu într-a somnului; e o descoperire spirituală.</text:span></text:p>
    <text:p text:style-name="P10"><text:soft-page-break/><text:span text:style-name="T6">Între sufletele spirituale există în</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">elegere spirituală, descoperiri </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i o legătură cură</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ită de orice închipuire sau fantezie, o tovără</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">ie neîncătu</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">ată de timp </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i de spa</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">iu. Astfel e scris în Evanghelie, că pe Muntele Tabor, Moise </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i Ilie au venit la Hristos, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i e sigur că această întâlnire nu a fost materială. A avut loc, într-o stare spirituală, „Comunicări de acest fel”, sunt reale </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i pricinuiesc urmări minunate în mintea </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i în gândurile oamenilor, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i le apropie inimile.” - Răspunsuri la câteva întrebări, p. 290-292.</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T6">‘Abdu’l-Bahá, cu toate că admite realitatea facultă</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ilor „psihice supranormale”, opre</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">te de la o prea grăbită </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i silnică dezvoltare a lor. Aceste facultă</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i vor înflori în chip firesc, la timpul cuvenit, dacă urmăm cărarea propă</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">irii spirituale, pe care au însemnat-o pentru noi, profe</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ii. Iată ce spune în această privin</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ă:</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T6">„Faptul de a ne atinge de for</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ele spirituale, pe câtă vreme, suntem în această lume, are urmări rele, asupra stărei sufletului în via</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">a viitoare. Acele for</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">e sunt reale, însă în mod normal, nu lucrează pe planul vie</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ii pământe</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">ti. Copilul din pântecele mamei, are ochi, urechi, mâini, picioare, etc., dar ele nu sunt în activitate. Întregul scop al vie</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ii înlumea materială, e intrarea în lumea Realită</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ii, unde acele for</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">e vor deveni active, căci apar</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">in acelei lumi”. (convorbire notată de Miss Buckton’s </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i revăzută de ‘Abdu’l-Bahá).</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T6">Comunicarea cu spiritele celor trecu</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i din via</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ă, nu ar trebui căutată, din plăcere, sau din curiozitate de</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">artă. Totu</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i e o datorie </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i o bucurie, pentru cei ce se află de o parte a vălului să iubească </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i să ajute pe cei de partea cealaltă </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i să se roage pentru dân</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">ii. Bahá’íilor le e poruncit să se roage pentru cei mor</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i.</text:span></text:p>
    <text:p text:style-name="P12">Iată ce spune ‘Abdu’l-Bahá:</text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T6">„Harul rugăciunilor urmate de îndeplinire, e una din perfec</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">iunile dăruite sufletelor înaintate, precum </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i Manifestărilor lui Dumnezeu. Iisus Hristos avea puterea de a se ruga, pentru iertarea du</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">manilor Lui, pe când era pe pământ, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i desigur că are </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i acum acea putere. ‘Abdu’l-Bahá, niciodată nu pomene</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">te de o persoană moartă, fără a zice: „Dumnezeu să-l ierte!” sau cuvinte cu acela</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i în</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">eles. Credincio</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">ii profe</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ilor, au </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i ei puterea de a se ruga, pentru iertarea sufletelor. A</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">adar, nu trebuie s</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> credem c</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> vreun suflet poate s</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> fie os</text:span><text:span text:style-name="T5">â</text:span><text:span text:style-name="T6">ndit la o stare neschimb</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">toare de suferin</text:span><text:span text:style-name="T5">þã</text:span><text:span text:style-name="T6"> sau de p</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">r</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">sire, pricinuit</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> de o deplin</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> necunoa</text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">tere a lui Dumnezeu. R</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">m</text:span><text:span text:style-name="T5">â</text:span><text:span text:style-name="T6">n</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">ntotdeauna spre folosul lor puterea rug</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">ciunilor urmate de </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">ndeplinire...</text:span></text:p>
    <text:p text:style-name="P10"><text:span text:style-name="T6">Cei boga</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i </text:span><text:span text:style-name="T5">î</text:span><text:span text:style-name="T6">n lumea cealalt</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">, pot ajuta pe s</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">raci, precum boga</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">ii ajut</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> pe s</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">raci aici pe p</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">m</text:span><text:span text:style-name="T5">â</text:span><text:span text:style-name="T6">nt. </text:span><text:span text:style-name="T5">Î</text:span><text:span text:style-name="T6">n am</text:span><text:span text:style-name="T5">â</text:span><text:span text:style-name="T6">ndou</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> lumile, to</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i sunt f</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6">pturile lui Dumnezeu, </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-name="T6">i totdeauna </text:span><text:soft-page-break/><text:span text:style-name="T6">at</text:span><text:span text:style-name="T5">â</text:span><text:span text:style-name="T6">rn</text:span><text:span text:style-name="T5">ã</text:span><text:span text:style-name="T6"> de El. Ei nu sunt independen</text:span><text:span text:style-name="T5">þ</text:span><text:span text:style-name="T6">i </text:span><text:span text:style-name="T5">º</text:span><text:span text:style-n