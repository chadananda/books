   <text:p text:style-name="P25"><text:span text:style-name="T2">بيان</text:span><text:span text:style-name="T5"> </text:span><text:span text:style-name="T2">أنّ</text:span><text:span text:style-name="T5"> </text:span><text:span text:style-name="T2">ليس</text:span><text:span text:style-name="T5"> </text:span><text:span text:style-name="T2">في</text:span><text:span text:style-name="T5"> </text:span><text:span text:style-name="T2">الوجود</text:span><text:span text:style-name="T5"> </text:span><text:span text:style-name="T2">شرّ</text:span></text:p>
